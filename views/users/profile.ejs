<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/199c2dc80b.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/profile.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Profile</title>
  </head>
  <body>
    <!-- nav -->
    <%-include("../partials/navbar.ejs")%>
    <div class="profile-container">
      <header style="background-image: url(<%=user.coverImage%>)">
        <div class="icons-container">
          <p>
            <a href="/api/v1/users/cover-photo-upload">
              <i class="fas fa-camera upload-btn"></i>
            </a>
          </p>
          <p>
            <a href="/api/v1/users/update">
              <i class="fas fa-edit"></i>
            </a>
          </p>
          <p>
            <a href="/api/v1/users/update-password">
              <i class="fas fa-key"></i>
            </a>
          </p>
        </div>
      </header>

      <!-- profile image -->
      <div class="profile-img">
        <img src="<%=user && user.profileImage%>" alt="profile image" />
        <!-- upload profile image icon -->
        <a href="/api/v1/users/profile-photo-upload">
          <i class="fas fa-camera upload-btn"></i>
        </a>
      </div>
      <!-- personal details -->
      <div class="personal-container">
        <div class="details-wrapper">
          <div class="details">
            <i class="fas fa-user"></i>
            <p>Name: <%=user && user.fullName%></p>
          </div>
          <div class="details">
            <i class="fas fa-envelope"></i>
            <p>Email: <%=user && user.email%></p>
          </div>
          <!-- date joined -->
          <div class="details">
            <i class="fas fa-calendar"></i>
            <p>
              Date Joined: <%=user &&
              user.createdAt.toLocaleDateString("en-GB")%>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="latest-post-title">
      <!-- Icon -->
      <i class="fas fa-book-open"></i>
      <h1>Latest Posts (<%=user && user.posts.length%>)</h1>
    </div>

    <!-- content -->
    <section class="container-flex">
      <%if(user && user.posts.length <= 0) {%>
      <h1>You have no posts yet</h1>
      <%}else if(user){%> <%user.posts.forEach((post) => {%>
      <article class="post-content">
        <img src="<%=post && post.image%>" alt="" class="post-image" />
        <p class="post-info">
          <span class="post-author">
            <i class="fas fa-user"></i>
            <a href="#">John Doe</a>
          </span>
          <span class="post-date">
            <i class="fas fa-calendar-alt"></i>
            <time datetime="2020-01-01"
              ><%=post && post.createdAt.toLocaleDateString("en-GB")%></time
            >
          </span>
        </p>
        <h1 class="post-title"><%=post && post.title%></h1>
        <p class="post-body"><%=post && post.description%></p>
        <!-- category -->
        <div class="post-category">
          <span>Category:<%=post && post.category%></span>
        </div>
        <a href="/" class="post-read-more">Continue Reading...</a>
      </article>
      <%})%> <%}%>
    </section>
    <!-- footer -->
    <%-include("../partials/footer.ejs")%>
  </body>
</html>

<p>
  <i style="color: yellow" class="fas fa-key fas"></i>
</p>
